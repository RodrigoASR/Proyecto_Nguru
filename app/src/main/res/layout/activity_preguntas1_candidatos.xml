            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/acceso" />

            <TextView
                android:id="@+id/textView1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
