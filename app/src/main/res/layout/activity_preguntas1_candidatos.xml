                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView100000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:padding="15dp"
                android:text="La siguiente encuesta posee 20 preguntas, cada una de ellas posee 3 alternativas. Responde segun más representado te sientas con cada enunciado." />

            <TextView
